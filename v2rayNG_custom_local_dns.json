{
    "log": {
        "loglevel": "warning"
    },
    "dns": {
        "hosts": {
            "geosite:category-ads-all": "127.0.0.1"
        },
        "servers": [
            "https://223.5.5.5/dns-query",
            {
                "address": "1.1.1.1",
                "domains": [
                    "geosite:geolocation-!cn"
                ],
                "skipFallback": true
            }
        ],
        "queryStrategy": "UseIPv4"
    },
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "inboundTag": [
                    "dns-in"
                ],
                "outboundTag": "dns-out"
            },
            {
                "type": "field",
                "ip": [
                    "223.5.5.5"
                ],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "domain": [
                    "geosite:geolocation-!cn"
                ],
                "outboundTag": "proxy"
            },
            {
                "type": "field",
                "ip": [
                    "geoip:cn",
                    "geoip:private"
                ],
                "outboundTag": "direct"
            }
        ]
    },
    "inbounds": [
        {
            "listen": "127.0.0.1",
            "port": 10808,
            "protocol": "socks",
            "settings": {
                "udp": true
            },
            "sniffing": {
                "enabled": true,
                "destOverride": [
                    "http",
                    "tls",
                    "quic"
                ],
            "routeOnly": true
            }
        },
        {
            "listen": "127.0.0.1",
            "port": 10853,
            "protocol": "dokodemo-door",
            "settings": {
                "address": "223.5.5.5",
                "port": 53,
                "network": "udp"
            },
            "tag": "dns-in"
        }
    ],
    "outbounds": [
        {
            // 粘贴你的客户端配置，需要保留 "tag": "proxy"
            "tag": "proxy"
        },
        {
            "protocol": "freedom",
            "tag": "direct"
        },
        {
            "protocol": "blackhole",
            "tag": "block"
        },
        {
            "protocol": "dns",
            "settings": { // 若不写 "settings" 字段，使用默认值
                "nonIPQuery": "drop" // 默认值 "drop"，阻止非 A/AAAA 的查询，"skip"，允许非 A/AAAA 的查询，
            },
            "proxySettings": { // 当 "nonIPQuery": "skip" 时，若不写 "proxySettings" 字段，使用本地网络出站，若写了使用对应 "tag" 出站
                "tag": "direct" // 目的地址是 "tag": "dns-in" 中 "settings" 字段的内容
            },
            "tag": "dns-out"
        }
    ]
}
